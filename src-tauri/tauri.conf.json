{
	"build": {
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist"
	},
	"package": {
		"productName": "balance-book",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"title": "Balance Book",
				"width": 1360,
				"height": 1020,
				"resizable": false,
				"maximizable": true,
				"minimizable": true
			}
		],
		"security": {
			"csp": null
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "finance.balance-book.app",
			"publisher": "ZK",
			"icon": ["icons/icon.png", "icons/icon.ico", "icons/icon.icns"],
			"category": "Finance",
			"shortDescription": "Manage personal finances",
			"longDescription": "Balance Book is a personal finance management app that helps you keep track of your recent transactions and account balances with Plaid banking API."
		}
	}
}
